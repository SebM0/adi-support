<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<!--fx:controller="com.axway.adi.tools.ActivityController"-->

<BorderPane prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" >
    <top>
        <HBox>
            <VBox alignment="CENTER_LEFT" prefHeight="200.0">
                <LineChart fx:id="timeChart" axisSortingPolicy="NONE" horizontalZeroLineVisible="false" maxWidth="1000.0" minWidth="800.0" prefHeight="100.0" prefWidth="800.0" verticalGridLinesVisible="false">
                    <xAxis>
                        <CategoryAxis side="BOTTOM" visible="false" />
                    </xAxis>
                    <yAxis>
                        <NumberAxis side="LEFT" />
                    </yAxis>
                </LineChart>
                <HBox alignment="CENTER_LEFT">
                    <Slider fx:id="timeSlider" blockIncrement="1.0" cache="true" majorTickUnit="1.0" max="100.0" min="1.0" minorTickCount="0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="14.0" prefWidth="750.0" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="1.0">
                  <HBox.margin>
                     <Insets left="40.0" />
                  </HBox.margin></Slider>
                </HBox>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="200.0">
                <Label text="Time:                                                ">
                    <VBox.margin>
                        <Insets left="20.0" top="40.0" />
                    </VBox.margin>
                </Label>
                <Label fx:id="timeLabel" text="Label" textFill="#0a6beb">
                    <VBox.margin>
                        <Insets left="20.0" top="10.0" />
                    </VBox.margin>
                    <font>
                        <Font name="System Bold" size="13.0" />
                    </font>
                </Label>
                <Button fx:id="runButton" mnemonicParsing="false" onAction="#onRun" prefWidth="50.0" text="&gt;">
                    <VBox.margin>
                        <Insets left="20.0" top="75.0" />
                    </VBox.margin>
                </Button>
            </VBox>
        </HBox>
    </top>
    <center>
        <TreeView fx:id="pressure" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
    </center>
   <right>
      <VBox prefHeight="500.0" prefWidth="310.0" BorderPane.alignment="CENTER">
         <children>
              <PieChart fx:id="memPie" prefHeight="400.0" prefWidth="342.0" />
            <BarChart fx:id="channelStack">
              <xAxis>
                <CategoryAxis side="BOTTOM" />
              </xAxis>
              <yAxis>
                <NumberAxis side="LEFT" upperBound="32.0" />
              </yAxis>
            </BarChart>
         </children>
      </VBox>
   </right>
</BorderPane>
