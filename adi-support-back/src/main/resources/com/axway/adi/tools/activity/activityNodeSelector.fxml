<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<BorderPane prefHeight="138.0" prefWidth="603.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.axway.adi.tools.activity.ActivityNodeSelector">
   <top>
      <Label alignment="CENTER" text="Select ADI root folder" textAlignment="CENTER" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <ComboBox fx:id="pathCombo" prefHeight="26.0" prefWidth="579.0" BorderPane.alignment="CENTER" />
   </center>
   <bottom>
      <BorderPane prefHeight="39.0" prefWidth="603.0" BorderPane.alignment="CENTER">
         <left>
            <Button mnemonicParsing="false" onAction="#onBrowse" text="Browse" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets left="10.0" />
               </BorderPane.margin>
            </Button>
         </left>
         <right>
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" onAction="#onLaunchActivity" text="Activity" textFill="#0911f8" />
                  <Button defaultButton="true" mnemonicParsing="false" onAction="#onLaunchComputing" text="Computing" textFill="#0911f8" />
               </children>
               <BorderPane.margin>
                  <Insets right="10.0" />
               </BorderPane.margin>
            </HBox>
         </right>
      </BorderPane>
   </bottom>
</BorderPane>
